  <h3>Here are your books!</h3>
  <div>
  {{#each user.books}}
    <!-- <div class="book-show-each"> -->
    <ul class="books">
      <li>Title:{{title}}</li>
      <li>Author:{{author}}</li>
      <li>ISBN:{{ISBN}}</li>
      <li>Memo:{{memo}}</li>
    </ul>
    </div>
    <form method='post' action='/users/{{../user._id}}/delete/{{_id}}?_method=delete'>
      <input type='submit' value="Delete">
    </form>

    <div id="book-edit">
        <a href="/users/{{../user._id}}/edit">Edit Book</a>
        <a href="/users">Back</a>
    </div>

  {{/each}}
